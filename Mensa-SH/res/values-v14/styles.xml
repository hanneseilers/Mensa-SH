<resources>

    <style name="Theme.Mensa" parent="@style/Holo.Theme.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mensa</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Mensa</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mensa</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mensa</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Mensa</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mensa</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_mensa</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_mensa</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mensa</item>               
    </style>

    <style name="ActionBar.Solid.Mensa" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_mensa</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mensa</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_mensa</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mensa</item>
    </style>

    <style name="ActionBar.Transparent.Mensa" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_mensa</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mensa</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mensa.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Mensa</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mensa</item>
    </style>

</resources>