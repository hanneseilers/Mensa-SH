<resources>

    <style name="Theme.Mensa" parent="@style/Holo.Theme.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_mensa</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mensa</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mensa</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mensa</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mensa</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mensa</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mensa</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mensa</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mensa</item>        
    </style>

    <style name="ActionBar.Solid.Mensa" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_mensa</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mensa</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mensa</item>
        <item name="progressBarStyle">@style/ProgressBar.Mensa</item>
    </style>

    <style name="ActionBar.Transparent.Mensa" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_mensa</item>
        <item name="progressBarStyle">@style/ProgressBar.Mensa</item>
    </style>
	
    <style name="PopupMenu.Mensa" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mensa</item>	
    </style>
	
    <style name="DropDownListView.Mensa" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mensa</item>
    </style>

    <style name="ActionBarTabStyle.Mensa" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mensa</item>
    </style>
	
    <style name="DropDownNav.Mensa" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mensa</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mensa</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mensa</item>
    </style>
    
    <style name="ProgressBar.Mensa" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mensa</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mensa" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mensa</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mensa.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mensa</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mensa</item>
    </style>
    
    <style name="MensaProgressBarStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/mensa_progressbar</item>
    </style>

</resources>