<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="navigation_header"></style>

    <style name="naviagtion_header_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_action_expand</item>
        <item name="android:drawableEnd">@drawable/ic_action_expand</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">@dimen/navigation_header_padding</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="navigation_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>