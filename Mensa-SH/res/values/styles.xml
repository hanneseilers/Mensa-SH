<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text_view" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_small_info" parent="@style/text_view_small">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_view_button" parent="@style/text_view_small">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:padding">@dimen/general_padding</item>
    </style>

    <style name="navigation_header_apperance" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="navigation_header" parent="@style/navigation_header_apperance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_action_expand</item>
        <item name="android:drawableEnd">@drawable/ic_action_expand</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">@dimen/navigation_header_padding</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="navigation_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="navigation_item" parent="@style/text_view">
        <item name="android:padding">@dimen/navigation_text_padding</item>
    </style>

    <style name="navigation_button" parent="@style/navigation_header_apperance">
        <item name="android:padding">@dimen/navigation_button_padding</item>
    </style>

</resources>