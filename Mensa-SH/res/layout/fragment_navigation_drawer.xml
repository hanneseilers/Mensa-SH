<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:ignore="Overdraw" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtNavigationSettings"
            style="@style/navigation_button"
            android:layout_marginBottom="@dimen/navigation_button_margin_bottom"
            android:drawableEnd="@drawable/ic_action_settings"
            android:drawableRight="@drawable/ic_action_settings"
            android:text="@string/settings" />

        <TextView
            android:id="@+id/lblNavigationCity"
            style="@style/navigation_header"
            android:text="@string/navigation_header_city"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/divNavigationCity"
            style="@style/navigation_container" >
        </LinearLayout>

        <TextView
            android:id="@+id/lblNavigationMensa"
            style="@style/navigation_header"
            android:text="@string/navigation_header_mensa"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/divNavigationMensa"
            style="@style/navigation_container" >
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pgbNavigationLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>