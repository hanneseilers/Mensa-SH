<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/general_padding" >

    <TextView
        android:id="@+id/txtRatingMeal"
        style="@style/text_view"
        android:layout_width="match_parent" />

    <RatingBar
        android:id="@+id/ratRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:stepSize="1" />

    <TextView
        android:id="@+id/txtRatingDisclaimer"
        style="@style/text_view_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_about"
        android:drawableStart="@drawable/ic_action_about"
        android:gravity="center_vertical"
        android:text="@string/disclaimer"
        android:textStyle="bold" />

</LinearLayout>